    "version": "0.2.0",
    "configurations": [

        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to chrome, with sourcemaps",
            "port": 9222,
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}",
            "url": "http://localhost:3000/*"  // This will tell chrome to only debug for this url pattern
        }
    ]
}